---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { toPage } from "@/utils/paths";
---

<BaseLayout title="Page Not Found">
  <section class="px-6 py-16 text-center md:px-10 md:py-24">
    <p class="inline-flex rounded-full border border-[#c8c5ba] bg-white px-3 py-1 text-xs font-semibold">404</p>
    <h1 data-i18n="notFound.title" class="mt-4 text-4xl font-semibold md:text-6xl">Page not found</h1>
    <p data-i18n="notFound.description" class="mx-auto mt-3 max-w-[560px] text-sm text-[#4c4c4c] md:text-base">
      The page you are looking for does not exist or has been moved.
    </p>
    <div class="mt-6 flex justify-center gap-2">
      <a href={toPage("/")} data-i18n="notFound.backHome" class="primary-button">Back Home</a>
      <a href={toPage("/work")} data-i18n="notFound.viewWork" class="pill-button px-4 py-2 text-sm">View Work</a>
    </div>
  </section>
</BaseLayout>
