---
import BaseLayout from "@/layouts/BaseLayout.astro";
import InquiryForm from "@/components/InquiryForm.astro";

const CONTACT_EMAIL = import.meta.env.PORTFOLIO_EMAIL || "radurbae@gmail.com";
const WHATSAPP_URL = import.meta.env.PORTFOLIO_WHATSAPP || "https://wa.me/6281234567890";
const CALL_URL = import.meta.env.PORTFOLIO_CALL_URL || "https://cal.com";
---

<BaseLayout title="Contact">
  <section class="px-6 py-8 md:px-10 md:py-12">
    <p data-reveal data-i18n="contact.badge" class="motion-reveal inline-flex rounded-full border border-[#c8c5ba] bg-white px-3 py-1 text-xs font-semibold">
      Contact
    </p>
    <h1 data-reveal data-i18n="contact.headline" style="--reveal-delay:80ms" class="motion-reveal mt-4 max-w-[760px] text-4xl font-semibold leading-tight md:text-6xl">
      Let&apos;s build your next product.
    </h1>
    <p data-reveal data-i18n="contact.description" style="--reveal-delay:120ms" class="motion-reveal mt-4 max-w-[760px] text-sm text-[#4c4c4c] md:text-base">
      Share your product goals, timeline, and current challenges. I can support strategy, design,
      and implementation end-to-end.
    </p>

    <div data-reveal style="--reveal-delay:160ms" class="motion-reveal mt-7 grid grid-cols-1 gap-4 md:grid-cols-2">
      <article class="motion-card rounded-2xl border border-[#d9d7ce] bg-white p-5">
        <h2 data-i18n="contact.emailTitle" class="text-xl font-semibold">Email</h2>
        <p data-i18n="contact.emailDescription" class="mt-2 text-sm text-[#4c4c4c]">Best for project scope and requirements.</p>
        <a href={`mailto:${CONTACT_EMAIL}`} class="primary-button motion-press mt-4">{CONTACT_EMAIL}</a>
      </article>

      <article class="motion-card rounded-2xl border border-[#d9d7ce] bg-white p-5">
        <h2 data-i18n="contact.quickCallTitle" class="text-xl font-semibold">Quick Call</h2>
        <p data-i18n="contact.quickCallDescription" class="mt-2 text-sm text-[#4c4c4c]">Book a short intro call to align on goals and timeline.</p>
        <a href={CALL_URL} target="_blank" rel="noreferrer" data-i18n="contact.quickCallButton" class="primary-button motion-press mt-4">Book Intro Call</a>
      </article>
    </div>

    <article data-reveal class="motion-reveal motion-card mt-4 rounded-2xl border border-[#d9d7ce] bg-white p-5">
      <h2 data-i18n="contact.inquiryTitle" class="text-xl font-semibold">Quick Inquiry Form</h2>
      <p data-i18n="contact.inquiryDescription" class="mt-2 text-sm text-[#4c4c4c]">Fill this and we&apos;ll open your email app with a ready-to-send project brief.</p>
      <div class="mt-4">
        <InquiryForm contactEmail={CONTACT_EMAIL} />
      </div>
    </article>

    <article data-reveal class="motion-reveal motion-card mt-4 rounded-2xl border border-[#d9d7ce] bg-white p-5">
      <h2 data-i18n="contact.instantTitle" class="text-xl font-semibold">Instant channels</h2>
      <p data-i18n="contact.instantDescription" class="mt-2 text-sm text-[#4c4c4c]">Prefer faster communication? Reach me here.</p>
      <div class="mt-4 flex flex-wrap items-center gap-2">
        <a href={`mailto:${CONTACT_EMAIL}`} data-i18n="contact.emailButton" class="primary-button motion-press">Email</a>
        <a href={WHATSAPP_URL} target="_blank" rel="noreferrer" data-i18n="contact.whatsappButton" class="pill-button motion-press px-4 py-2 text-sm">WhatsApp</a>
        <a href={CALL_URL} target="_blank" rel="noreferrer" data-i18n="contact.callButton" class="pill-button motion-press px-4 py-2 text-sm">Book Call</a>
      </div>
    </article>
  </section>
</BaseLayout>
