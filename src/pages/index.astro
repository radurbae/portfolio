---
import BaseLayout from "@/layouts/BaseLayout.astro";
import HeroTypingBlock from "@/components/HeroTypingBlock.astro";
import {
  CASE_STUDIES,
  PROCESS_STEPS,
  PROFILE,
  SERVICE_PILLARS,
  SNAPSHOT_METRICS,
  TRUST_ITEMS
} from "@/data/portfolio-data";
import { toPage } from "@/utils/paths";

const featuredCaseStudies = CASE_STUDIES.slice(0, 3);
const HERO_TYPING_HEADLINE = "YOUR DIGITAL DEVELOPMENT PARTNER";
const HERO_TYPING_HIGHLIGHT = "Digital Development";
const HERO_TYPING_DESCRIPTION =
  "Brand & Software Development Partner: Delivering high-quality digital experiences with precision and performance. Rads Dev is built for organizations and businesses who demand professional, future-ready solutions.";
---

<BaseLayout>
  <section class="py-10 text-center md:py-16">
    <div
      data-reveal
      style="--reveal-delay:30ms"
      class="motion-reveal motion-float-slow mx-auto flex w-fit items-center gap-2 rounded-full border border-[#d9d9d9] bg-white px-3 py-1 text-xs text-[#4c4c4c]"
    >
      <span class="relative flex h-2.5 w-2.5">
        <span class="online-dot absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-80"></span>
        <span class="relative inline-flex h-2.5 w-2.5 rounded-full bg-emerald-500"></span>
      </span>
      <span class="font-bold text-[#151515]">{PROFILE.handle}</span>
      <span data-i18n="home.profileTitle" class="font-normal text-[#4c4c4c] opacity-80">{PROFILE.title}</span>
    </div>

    <div data-reveal style="--reveal-delay:120ms" class="motion-reveal mt-6">
      <HeroTypingBlock
        headline={HERO_TYPING_HEADLINE}
        headlineHighlight={HERO_TYPING_HIGHLIGHT}
        description={HERO_TYPING_DESCRIPTION}
        headlineKey="home.heroHeadline"
        highlightKey="home.heroHighlight"
        descriptionKey="home.heroDescription"
      />
    </div>

    <div data-reveal style="--reveal-delay:240ms" class="motion-reveal mt-8 flex items-center justify-center">
      <a href={toPage("/contact")} data-i18n="home.getInTouch" class="primary-button motion-press px-6 py-3 text-sm">
        Get in touch
      </a>
    </div>

    <div data-reveal style="--reveal-delay:290ms" class="motion-reveal mx-auto mt-8 grid max-w-[760px] grid-cols-1 gap-2 sm:grid-cols-3">
      {
        SNAPSHOT_METRICS.map((metric, metricIndex) => (
          <article class="motion-card rounded-2xl border border-[#dbdbdb] bg-white p-3 text-left">
            <p data-i18n={`home.metrics.${metricIndex === 0 ? "projects" : metricIndex === 1 ? "disciplines" : "timeline"}`} class="text-xs uppercase tracking-[0.08em] text-[#5a5a5a]">{metric.label}</p>
            <p class="mt-2 text-xl font-semibold">{metric.value}</p>
          </article>
        ))
      }
    </div>
  </section>

  <section data-reveal style="--reveal-delay:40ms" class="motion-reveal border-y border-[#dddddd] py-7">
    <div data-i18n="home.selectedBuilds" class="mb-3 text-center text-xs font-semibold uppercase tracking-[0.1em] text-[#5a5a5a]">
      Selected Product Builds
    </div>
    <ul class="grid grid-cols-2 gap-2 text-center sm:grid-cols-3 lg:grid-cols-6">
      {
        TRUST_ITEMS.map((item, trustIndex) => (
          <li>
            <div class="motion-card flex min-h-[56px] flex-col items-center justify-center rounded-xl border border-[#dbdbdb] bg-white px-2">
              <p class="text-sm font-semibold">{item.name}</p>
              <p data-i18n={`home.trustTypes.${trustIndex}`} class="text-xs text-[#5a5a5a]">{item.type}</p>
            </div>
          </li>
        ))
      }
    </ul>
  </section>

  <section data-reveal class="motion-reveal py-10 md:py-12">
    <h2 data-i18n="home.servicesTitle" class="text-center text-3xl font-semibold md:text-5xl">Multidisciplinary Services</h2>
    <div class="mt-5 grid grid-cols-1 gap-3 sm:grid-cols-2 lg:grid-cols-4">
      {
        SERVICE_PILLARS.map((service, index) => (
          <article class="motion-card rounded-2xl border border-[#dbdbdb] bg-white p-4">
            <p class="text-xs font-semibold tracking-[0.08em] text-[#5a5a5a]">0{index + 1}</p>
            <h3 data-i18n={`home.services.${index}.title`} class="mt-2 text-base font-semibold">{service.title}</h3>
            <p data-i18n={`home.services.${index}.description`} class="mt-2 text-sm text-[#4c4c4c]">{service.description}</p>
            <ul class="mt-4 space-y-1 text-xs text-[#5a5a5a]">
              {service.items.map((item, itemIndex) => <li data-i18n={`home.services.${index}.items.${itemIndex}`}>â€¢ {item}</li>)}
            </ul>
          </article>
        ))
      }
    </div>
  </section>

  <section data-reveal class="motion-reveal border-t border-[#dddddd] py-10 md:py-12">
    <div class="mb-6 flex items-end justify-between gap-3">
      <div>
        <p data-i18n="home.featuredLabel" class="text-xs font-semibold uppercase tracking-[0.1em] text-[#5a5a5a]">Featured Case Studies</p>
        <h2 data-i18n="home.featuredTitle" class="mt-2 text-3xl font-semibold leading-tight md:text-5xl">Portfolio work with measurable outcomes</h2>
      </div>
      <a href={toPage("/work")} data-i18n="home.viewAll" class="hidden text-sm font-semibold text-[#4c4c4c] underline-offset-4 hover:underline md:inline-flex">
        View all
      </a>
    </div>

    <div class="grid grid-cols-1 gap-4 lg:grid-cols-3">
      {
        featuredCaseStudies.map((study) => (
          <article class="motion-card rounded-2xl border border-[#dbdbdb] bg-white p-4">
            <div class="flex flex-wrap items-center gap-2 text-xs">
              <span class="rounded-full border border-[#d2d2d2] bg-[#f8f8f6] px-3 py-1">{study.category}</span>
              <span class="rounded-full border border-[#d2d2d2] bg-[#f8f8f6] px-3 py-1">{study.year}</span>
            </div>
            <h3 class="mt-3 text-xl font-semibold">{study.title}</h3>
            <p class="mt-2 text-sm text-[#4c4c4c]">{study.summary}</p>

            <div class="mt-4 flex flex-wrap gap-2">
              {
                study.outcomes.slice(0, 2).map((outcome) => (
                  <span class="rounded-full border border-[#d2d2d2] bg-white px-3 py-1 text-xs">
                    {outcome.label}: {outcome.value}
                  </span>
                ))
              }
            </div>

            <div class="mt-5">
              <a href={toPage(`/work/${study.slug}`)} data-i18n="home.openCaseStudy" class="text-sm font-semibold text-[#151515] underline-offset-4 hover:underline">
                Open case study
              </a>
            </div>
          </article>
        ))
      }
    </div>
  </section>

  <section data-reveal class="motion-reveal border-t border-[#dddddd] py-10 md:py-12">
    <div class="mb-6 text-center">
      <p data-i18n="home.processLabel" class="text-xs font-semibold uppercase tracking-[0.1em] text-[#5a5a5a]">Process</p>
      <h2 data-i18n="home.processTitle" class="mt-2 text-3xl font-semibold leading-tight md:text-5xl">How projects move from brief to launch</h2>
    </div>
    <div class="grid grid-cols-1 gap-3 md:grid-cols-2 lg:grid-cols-4">
      {
        PROCESS_STEPS.map((step, processIndex) => (
          <article class="motion-card rounded-2xl border border-[#dbdbdb] bg-white p-4">
            <p class="text-xs font-semibold tracking-[0.08em] text-[#5a5a5a]">{step.step}</p>
            <h3 data-i18n={`home.process.${processIndex}.title`} class="mt-2 text-lg font-semibold">{step.title}</h3>
            <p data-i18n={`home.process.${processIndex}.description`} class="mt-2 text-sm text-[#4c4c4c]">{step.description}</p>
          </article>
        ))
      }
    </div>
  </section>

  <section data-reveal class="motion-reveal border-t border-[#dddddd] py-10 text-center md:py-14">
    <p data-i18n="home.nextProject" class="text-xs font-semibold uppercase tracking-[0.1em] text-[#5a5a5a]">Next Project</p>
    <h2 data-i18n="home.nextTitle" class="mx-auto mt-2 max-w-[780px] text-balance text-3xl font-semibold leading-tight md:text-5xl">
      Need a partner who can handle brand, interface, and product build in one flow?
    </h2>
    <div class="mt-6">
      <a href={toPage("/contact")} data-i18n="home.continueToContact" class="motion-press inline-flex rounded-full border border-[#d7d7d7] bg-white px-5 py-2 text-sm font-semibold text-[#151515] underline-offset-4 hover:underline">
        Continue to contact
      </a>
    </div>
  </section>
</BaseLayout>
